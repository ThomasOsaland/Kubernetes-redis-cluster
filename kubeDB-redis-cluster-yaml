apiVersion: kubedb.com/v1alpha1
kind: Redis
metadata:
  name: redis-cluster-kube
spec:
  version: 4.0-v2
  mode: Cluster
  cluster:
    master: 3
    replicas: 1
  storageType: Durable
  terminationPolicy: Pause
  updateStrategy:
    type: RollingUpdate
  volumeMounts:
  - name: redis-cluster
    mountPath: /mnt/data
volumes:
- name: redis-cluster 
  hostPath:
    path: /mnt/data
